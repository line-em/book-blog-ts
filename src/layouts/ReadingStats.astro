  mini && (
    <>
      <section
        class="flex items-center px-2 py-2 border border-transparent rounded-xl shadow-sm bg-slate-50 gap-4 w-fit self-center hover:text-ctp-rosewater-400 whitespace-nowrap
        "
      >
        <Book color="var(--catppuccin-color-teal-300)" weight="duotone" size="19" />
        <GradientText text={books.length + " books read"} />
      </section>
      <section
        class="flex items-center px-2 py-2 border border-transparent hover:text-ctp-rosewater-300 hover:border-ctp-rosewater-200 rounded-xl shadow-sm bg-slate-50 gap-4 w-fit self-center hover:text-ctp-rosewater-400 whitespace-nowrap
        "
      >
        <PlusCircle color="var(--catppuccin-color-teal-300)" weight="duotone" size="19" />
        <a href="/stats">More stats</a>
      </section>
    </>
  )
}
