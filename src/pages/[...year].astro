---
import GridImage from "../components/GridImage.astro";
import BookGrid from "../layouts/BookGrid.astro";
import { yearList } from "../content/_yearList";
import Layout from "../layouts/Layout.astro";

export async function getStaticPaths() {
	return yearList.map((year) => ({
		params: {year: year}
	}));
}

const { year } = Astro.params;
---

<Layout title={`Books from ${Number(year)}`}>
	<BookGrid year={Number(year)}>
		<GridImage year={Number(year)} />
	</BookGrid>
</Layout>